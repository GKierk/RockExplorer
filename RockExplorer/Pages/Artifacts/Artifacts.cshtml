@page
@model RockExplorer.Pages.Artifacts.ArtifactsModel
@{
}
@*Dette er en HTML-template til visning af en liste over artefakter,
hvor hver række i tabellen viser artefaktens ID, navn, beskrivelse, dato for oprettelse og kunstner.
Derudover er der et redigeringslink for hvert artefakt.-MK*@

<h1>List of Artifacts</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Navn
            </th>
            <th>
                Beskrivelse
            </th>
            <th>
                Dato
            </th>
            <th>
                Kunstner
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Artifacts)
        {
            <tr>
                @item.Key
            </tr>
            <tr>
                @item.Value.Name
            </tr>
            <tr>
                @item.Value.Description
            </tr>
            <tr>
                @item.Value.YearOfCreation
            </tr>
            <tr>
                @item.Value.Artist
            </tr>
        }
    </tbody>
</table>